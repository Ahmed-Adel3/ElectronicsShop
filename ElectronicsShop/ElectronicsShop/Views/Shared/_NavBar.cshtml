@using Microsoft.AspNetCore.Identity
@using DataAccessLayer.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-lg navbar-light navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ElectronicsShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a>
                </li>
            </ul>
        </div>
    </div>
    <form class="container-fluid justify-content-start">
        @if (SignInManager.IsSignedIn(User))
        {
            <span>Welcome, @UserManager.GetUserAsync(User).Result.FullName</span>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-dark me-2">Logout</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-dark me-2">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-dark me-2">Register</a>
        }
    </form>

    <vc:culture-picker />
</nav>
